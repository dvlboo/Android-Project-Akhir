<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/primary_color"
    android:padding="20dp">

    <TextView
        android:id="@+id/TVTittle"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/chicle_regular"
        android:paddingStart="25dp"
        android:text="@string/TitleStartLogin"
        android:textColor="@color/black"
        android:textSize="50dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="20dp" />

    <TextView
        android:id="@+id/TVTittle2"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:fontFamily="@font/kohsantepheap_regular"
        android:paddingEnd="40dp"
        android:textColor="@color/black"
        android:textAlignment="textEnd"
        android:textStyle="bold"
        android:text="@string/TitleStartLogin2"
        android:textSize="27dp"
        app:layout_constraintTop_toBottomOf="@+id/TVTittle"/>

    <TextView
        android:id="@+id/TVTittle3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/koho_regular"
        android:textColor="@color/black"
        android:textAlignment="textEnd"
        android:paddingEnd="40dp"
        android:text="@string/TitleStartLogin3"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/TVTittle2"
        tools:layout_editor_absoluteX="24dp" />

    <TextView
        android:id="@+id/TVLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:fontFamily="@font/koho_regular"
        android:paddingHorizontal="40dp"
        android:text="@string/LoginHome"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/TVTittle3"
        tools:layout_editor_absoluteX="20dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="290dp"
        android:layout_height="300dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="#E3E3E3"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVLogin" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/inter_regular"
            android:paddingHorizontal="25dp"
            android:text="Email"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold|italic" />


        <EditText
            android:id="@+id/ETEmail"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="150px"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:paddingHorizontal="12dp"
            android:background="@drawable/corner_edittext"
            android:inputType="textEmailAddress"
            android:elevation="20dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:fontFamily="@font/inter_regular"
            android:paddingHorizontal="25dp"
            android:text="Password"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold|italic" />


        <EditText
            android:id="@+id/ETPassword"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="415px"
            android:elevation="20dp"
            android:paddingHorizontal="12dp"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/corner_edittext"
            android:inputType="textPassword"
            />


        <ImageView
            android:id="@+id/IVHideSee"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:src="@drawable/hide"
            android:layout_marginTop="415px"
            android:layout_marginStart="225dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign-in"
            android:layout_marginTop="220dp"
            android:layout_marginStart="100dp"
            android:textSize="13dp"
            android:fontFamily="@font/koho_regular"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:onClick="ClickMoveRegist"
            />

        <View
            android:id="@+id/divider"
            android:layout_width="3dp"
            android:layout_height="20dp"
            android:background="@color/black"
            tools:layout_editor_absoluteX="182dp"
            tools:layout_editor_absoluteY="610dp"
            android:layout_marginTop="220dp"
            android:layout_marginStart="150dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forget Password"
            android:layout_marginTop="220dp"
            android:layout_marginStart="160dp"
            android:textSize="13dp"
            android:fontFamily="@font/koho_regular"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:onClick="ClickMoveForget"
            />

        <Button
            android:id="@+id/BLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:text="Login"
            android:backgroundTint="@color/teal_200"
            android:textSize="20dp"
            android:enabled="false"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:fontFamily="@font/alegreya_regular"
            android:textAlignment="center"
            android:layout_marginTop="243dp"
            android:background="@drawable/corner_button"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"/>

    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>