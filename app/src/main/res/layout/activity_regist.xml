<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistActivity">

    <TextView
        android:id="@+id/TVTittle"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/chicle_regular"
        android:paddingStart="25dp"
        android:text="@string/TitleStartSignUp"
        android:textColor="@color/black"
        android:textSize="50dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="360dp"
        android:layout_height="550dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#E3E3E3"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVTittle"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/ETPassword2"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginStart="25dp"
                android:background="@drawable/corner_edittext"
                android:elevation="20dp"
                android:inputType="textPassword"
                android:paddingHorizontal="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <ImageView
                android:id="@+id/IVHideSee2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:padding="10dp"
                android:src="@drawable/hide"
                app:layout_constraintStart_toEndOf="@+id/ETPassword2"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/inter_regular"
                android:text="ReTyped Passsword  "
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold|italic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ETPassword" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/inter_regular"
                android:text="Name  "
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold|italic"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/ETName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="25dp"
                android:background="@drawable/corner_edittext"
                android:elevation="20dp"
                android:inputType="textPersonName"
                android:paddingHorizontal="12dp"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                tools:layout_editor_absoluteX="25dp" />

            <EditText
                android:id="@+id/ETEmail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="25dp"
                android:background="@drawable/corner_edittext"
                android:elevation="20dp"
                android:inputType="textEmailAddress"
                android:paddingHorizontal="12dp"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                tools:layout_editor_absoluteX="25dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/inter_regular"
                android:text="Email Adress  "
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold|italic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ETNo_telp" />

            <EditText
                android:id="@+id/ETNo_telp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="25dp"
                android:background="@drawable/corner_edittext"
                android:elevation="20dp"
                android:inputType="phone"
                android:paddingHorizontal="12dp"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                tools:layout_editor_absoluteX="25dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/inter_regular"
                android:text="Phone  "
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold|italic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ETName" />


            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:fontFamily="@font/inter_regular"
                android:text="Passsword  "
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold|italic"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ETEmail" />

            <EditText
                android:id="@+id/ETPassword"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginStart="25dp"
                android:background="@drawable/corner_edittext"
                android:elevation="20dp"
                android:inputType="textPassword"
                android:paddingHorizontal="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5" >
                <requestFocus></requestFocus>
            </EditText>

            <ImageView
                android:id="@+id/IVHideSee"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:padding="10dp"
                android:src="@drawable/hide"
                app:layout_constraintStart_toEndOf="@+id/ETPassword"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <Button
                android:id="@+id/BCreate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/corner_button"
                android:clickable="true"
                android:fontFamily="@font/alegreya_regular"
                android:foreground="?attr/selectableItemBackground"
                android:paddingHorizontal="80dp"
                android:text="Create"
                android:textSize="17dp"
                android:backgroundTint="@color/teal_200"
                android:textAllCaps="false"
                android:enabled="false"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.503"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ETPassword2" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>